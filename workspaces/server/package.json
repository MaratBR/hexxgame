{
  "name": "@hexx/server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist",
    "build-ts": "yarn tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "build": "npm run lint && npm run build-ts && npm run copy-static-assets",
    "start": "npm run serve",
    "watch-server": "yarn run nodemon --watch . -e ts,tsx --exec ts-node --prefer-ts-exts  server.ts",
    "dev": "yarn run watch-server",
    "test": "jest"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)",
      "**/__tests__/**/*.spec.ts?(x)"
    ],
    "roots": [
      "."
    ]
  },
  "dependencies": {
    "@hexx/common": "1.0.0",
    "@typegoose/typegoose": "^7.4.1",
    "bcrypt": "^5.0.0",
    "bull": "^3.18.1",
    "cachegoose": "^8.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "colyseus": "^0.14.2",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-cookie": "^1.0.0",
    "koa-cors": "^0.0.16",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.3",
    "koa-redis": "^4.0.1",
    "koa-session": "^6.1.0",
    "koa-socketio-session": "^1.0.0",
    "moment": "^2.29.1",
    "mongoose": "^5.10.13",
    "nanoid": "^3.1.16",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "socket.io": "^3.0.0",
    "socket.io-redis": "^5.4.0",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@types/bull": "^3",
    "@types/jsonwebtoken": "^8",
    "@types/koa": "^2",
    "@types/koa-cors": "^0",
    "@types/koa-logger": "^3",
    "@types/koa-passport": "^4",
    "@types/koa-redis": "^4",
    "@types/koa-session": "^5.10.3",
    "@types/mongoose": "^5",
    "@types/node": "^14.14.6",
    "@types/passport-local": "^1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "socket.io-client": "^3.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
